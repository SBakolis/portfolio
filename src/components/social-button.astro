---
	import { Icon } from 'astro-icon/components'

	const { icon, url} = Astro.props
---

<a
	href={url}
	target="_blank"
	class="cursor-pointer transition-all bg-neutral-800 text-white text-lg px-4 py-3 mr-2 md:mx-1 rounded-md border-fuchsia-800
				border-b-[4px] hover:brightness-110 hover:-translate-y-[1px] hover:border-b-[6px]	hover:shadow-lg hover:shadow-fuchsia-800 shadow-fuchsia-800"
>
	<Icon name={icon} />
</a>