---
	import { Image } from 'astro:assets';

	import vivaComLogo from "../assets/vivacom.png";
---

<div class="flex flex-col">
	<div class="flex flex-row justify-between p-1">
		<h2 class="pb-3 text-lg text-white">Currently</h2>
		<span class="relative flex h-3 w-3 m-1 mt-2">
			<span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
			<span class="relative inline-flex rounded-full h-3 w-3 bg-green-500"></span>
		</span>
	</div>
	<div>
		<div class="inline-flex items-center gap-x-2 text-md">
			<Image class="flex-shrink-0 size-8 rounded-md" src={vivaComLogo} alt="Workplace logo"/>
			<div>
				<p>Viva.com</p>
				<p class=" -m-l-2 text-zinc-600 text-xs">Software Engineer</p>
			</div>
		</div>
</div>
</div>